{
  "name": "consulta-cnpj-electron",
  "version": "1.0.0",
  "description": "Consulta Simples Nacional em Electron",
  "main": "dist-electron/main/main.js",
  "author": "Orbit",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf dist dist-electron",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.node.json --watch",
    "dev:electron": "wait-on tcp:5173 dist-electron/main/main.js dist-electron/main/preload.js dist-electron/main/workers/processor.worker.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.node.json",
    "build": "npm run clean && npm run build:renderer && npm run build:main",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.node.json"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "br.com.orbit.consulta-cnpj",
    "productName": "Consulta Simples Nacional",
    "directories": {
      "output": "release"
    },
    "asar": true,
    "files": [
      "dist-electron/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
